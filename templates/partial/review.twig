<div class="review {{class}}">
	{#{function('print_r', post)}#}
	<div class="review__header">
		<p class="review__header-category">{{ category }}</p>
		<h3 class="review__header-name">{{title}}</h3>
	</div>
	<div class="review__content">
		{% if video %}
			<a href="{{link}}" class="review__content-link">
				<img src="{{image|resize(560,320)}}" alt="{{title}}" class="review__content-image">
			</a>
		{% else %}
			<div class="review__content-info">
				<img src="{{image|resize(126,126)}}" alt="{{title}}" class="review__content-info-image">
				<div class="review__content-info-body">
					<div class="review__content-info-body-excerpt">{{excerpt}}</div>
					<a href="{{link}}" class="review__content-info-body-link">Читать полностью</a>
				</div>
			</div>
		{% endif %}
	</div>
</div>